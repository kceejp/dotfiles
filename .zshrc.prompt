# ip=`LANG=C /sbin/ifconfig eth0 | grep 'inet addr' | awk -F: '{print $2}' | awk '{print $1}'`

case ${UID} in
0)
    PROMPT="%{$fg[red]%}[${USER}@$(echo ${HOST%%.*} | tr '[a-z]' '[A-Z]')] %(!.#.$) %{$reset_color%}"
    RPROMPT="%{$fg[green]%}[%~]%{$reset_color%}"
;;
*)
    PROMPT="%{$fg[blue]%}[${USER}@$(echo ${HOST%%.*} | tr '[a-z]' '[A-Z]')] %(!.#.$) %{$reset_color%}"
    RPROMPT="%{$fg[green]%}[%~]%{$reset_color%}"
;;
esac
