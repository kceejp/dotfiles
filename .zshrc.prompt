ip=`LANG=C /sbin/ifconfig eth0 | grep 'inet addr' | awk -F: '{print $2}' | awk '{print $1}'`

case ${UID} in
0)
    PROMPT=$RED'[${USER}@$ip% :$(echo ${HOST%%.*} | tr "[a-z]" "[A-Z]")] %(!.#.$) '$DEFAULT
    RPROMPT=$GREEN'[%~]'$DEFAULT
;;
*)
    PROMPT=$BLUE'[${USER}@$ip% :$(echo ${HOST%%.*} | tr "[a-z]" "[A-Z]")] %(!.#.$) '$DEFAULT
    RPROMPT=$GREEN'[%~]'$DEFAULT
;;
esac
