# http://d.hatena.ne.jp/yanma_4/20080404/1207316545
if [ $TERM = "xterm-256color" ]; then
    lang=`echo $LANG | sed "s/.\+\.\(.\).\+/\1/"`
    preexec () {
        1="$1 " # deprecated.
        echo -ne "\ek${${(s: :)1}[0]}($lang)\e\\"
    }

    precmd() {
        echo -ne "\ek$(basename $(pwd))($lang)\e\\"
    }
fi

# screenを自動でリタッチ
if [ $SHLVL = 1 ]; then
    if [ -x `which screen` ]; then
        screen -D -RR
    fi
fi
